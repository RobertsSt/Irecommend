<div class="section background">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <div class="box">
          <h2 class="title is-2">Ielogoties</h2>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="field">
              <div class="control">
                <%= f.input :login, name: "login", required: false, label: "Epasts / Lietotājvārds", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
              <%= f.input :password, required: false, label: "Parole", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
              <%= f.input :remember_me, wrapper: false, label: "Atcerēties mani", as: :boolean if devise_mapping.rememberable? %>
              </div>
            </div>

            <%= f.button :submit, "Ielogoties", class:"button is-dark is-medium" %>
          <% end %>
          <br/>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
